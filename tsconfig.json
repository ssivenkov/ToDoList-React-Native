{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@root/*": ["src/*"],
      "@colors/*": ["src/colors/*"],
      "@commonTypes/*": ["src/commonTypes/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@enums/*": ["src/enums/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/env"
    ]
  },
  "include": ["./src", "index.js"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lint-staged.config.js",
  ]
}
